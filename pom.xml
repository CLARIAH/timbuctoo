<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>timbuctoo</groupId>
  <artifactId>timbuctoo</artifactId>
  <version>1.0.7-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Timbuctoo</name>
  <description>Back-end software that provides different front-ends to share data and variations on that data.</description>
  <url>http://repository.huygens.knaw.nl/static/search.html</url>
  <organization>
    <name>Huygens ING</name>
    <url>http://www.huygens.knaw.nl/</url>
  </organization>
  <inceptionYear>2013</inceptionYear>

  <modules>
    <module>timbuctoo-core</module>
    <module>timbuctoo-rest</module>
    <module>timbuctoo-search</module>
    <module>timbuctoo-tools</module>
    <module>timbuctoo-war-config-dev</module>
    <module>timbuctoo-war-config-test</module>
    <module>timbuctoo-war-config-prod</module>
    <module>timbuctoo-tools-config</module>
  </modules>
  
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <jdk.version>1.6</jdk.version>
    <activemq.version>5.7.0</activemq.version>
    <commons.configuration.version>1.9</commons.configuration.version>
    <guice.version>3.0</guice.version>
    <hamcrest-library.version>1.3</hamcrest-library.version>
    <jackson.version>2.1.1</jackson.version>
    <javax.validation.version>1.0.0.GA</javax.validation.version>
    <jersey.version>1.16</jersey.version>
    <junit.version>4.10</junit.version>
    <mockito.version>1.9.0</mockito.version>
    <quartz.version>2.2.0</quartz.version>
    <servlet-api.version>3.0.1</servlet-api.version>
    <slf4j.version>1.6.6</slf4j.version>
    <solr.version>4.3.1</solr.version>
  </properties>

  <prerequisites>
    <maven>3.0</maven>
  </prerequisites>

  <repositories>
    <repository>
      <id>central</id>
      <name>Central repository</name>
      <url>http://repo1.maven.org/maven2/</url>
    </repository>
    <repository>
      <id>sun-repo-2</id>
      <url>http://download.java.net/maven/2/</url>
    </repository>
    <repository>
      <id>apache</id>
      <url>https://repository.apache.org/content/repositories/public/</url>
    </repository>
    <repository>
      <id>oracle</id>
      <url>http://download.oracle.com/maven/</url>
    </repository>
    <repository>
      <id>surfconext</id>
      <url>https://build.surfconext.nl/repository/public/releases/</url>
    </repository>
    <repository>
      <id>Huygens</id>
      <url>http://maven.huygens.knaw.nl/repository/</url>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>always</updatePolicy>
        <checksumPolicy>warn</checksumPolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>always</updatePolicy>
        <checksumPolicy>fail</checksumPolicy>
      </snapshots>
    </repository>
  </repositories>

  <!-- TODO: fill in the details. -->
  <licenses>
  </licenses>

  <!-- TODO: fill in the details -->
  <scm>
    <connection>?</connection>
    <developerConnection>?</developerConnection>
    <url>?</url>
  </scm>

  <issueManagement>
    <system>Redmine</system>
    <url>http://suzanna.huygens.knaw.nl/projects/datarepositories</url>
  </issueManagement>

  <ciManagement>
    <system>cruisecontrolrb</system>
    <url>http://cruisecontrol.huygens.knaw.nl/projects/timbuctoo</url>
  </ciManagement>

  <developers>
    <developer>
      <id>RD</id>
      <name>Ronald Haentjens Dekker</name>
      <organization>Huygens ING</organization>
      <organizationUrl>http://www.huygens.knaw.nl</organizationUrl>
    </developer>
    <developer>
      <id>MM</id>
      <name>Martijn Maas</name>
      <organization>Huygens ING</organization>
      <organizationUrl>http://www.huygens.knaw.nl</organizationUrl>
    </developer>
    <developer>
      <id>WR</id>
      <name>Walter Ravenek</name>
      <organization>Huygens ING</organization>
      <organizationUrl>http://www.huygens.knaw.nl</organizationUrl>
    </developer>
  </developers>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.0</version>
        <configuration>
          <source>${jdk.version}</source>
          <target>${jdk.version}</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
