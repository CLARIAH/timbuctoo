# file with the monit configuration for timbuctoo
check process timbuctoo with pidfile /opt/timbuctoo/logs/timbuctoo_daemon.pid
	start program = "/opt/timbuctoo/bin/timbuctoo_daemon start"
	stop program = "/opt/timbuctoo/bin/timbuctoo_daemon stop"
	if failed
		port 8080
		protocol http
	then restart

	if failed
		port 8081
		protocol http
		request "/healthcheck?pretty=true"
	then alert
